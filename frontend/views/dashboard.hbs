<div style=" margin: 0px 40px;">
  {{#each firstData}}
  <div route="/detail" data-query="?id_user=1&id_film={{this.id}}" class="container-show active-button route-link" style="cursor: pointer;background-image: url('{{this.coverImage}}');">
    <h2 class="active-button" style="margin:0;">{{this.title}}</h2>
    <button>
      <img src="css/images/IconPlay.svg" alt="" style="margin: 5px 5px;" />
      Play Now
    </button>
    <div id="noRedirect" class="group-button">
      <img src="css/images/IconWishlist.svg" alt="" class="active-button" style="cursor: pointer; margin: 5px 5px;" />
      <img src="css/images/IconLike.svg" alt="" class="active-button" style="cursor: pointer; margin: 5px 5px;" />
      <img src="css/images/IconSpeaker.svg" alt="" class="active-button" style="cursor: pointer; margin: 5px 5px;" />
    </div>
  </div>
  {{/each}}
  <hr/>
  {{>list_movies}}
  <hr/>
  {{>galery_movies}}
</div>