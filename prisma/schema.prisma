datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id          Int      @id @default(autoincrement())
  namaDepan   String
  namaBelakang String
  username    String
  password    String
  balance     Int
  email       String
  role        String
  Beli        Beli[]
  Wishlist    Wishlist[]
  Feedback    Feedback[]
}

model Movies {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  director    String
  releaseYear Int
  genre       String[]
  price       Int
  duration    Int
  video       String
  coverImage  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Beli        Beli[]
  Wishlist    Wishlist[]
  Feedback    Feedback[]
}

model Beli {
  id_user  Int
  id_film  Int
  user     Users @relation(fields: [id_user], references: [id])
  movie    Movies @relation(fields: [id_film], references: [id])
  @@id([id_user, id_film])
}

model Wishlist {
  id_user  Int
  id_film  Int
  user     Users @relation(fields: [id_user], references: [id])
  movie    Movies @relation(fields: [id_film], references: [id])
  @@id([id_user, id_film])
}

model Feedback {
  id_user  Int
  id_film  Int
  rating   Float
  comment  String
  user     Users @relation(fields: [id_user], references: [id])
  movie    Movies @relation(fields: [id_film], references: [id])
  @@id([id_user, id_film])
}
